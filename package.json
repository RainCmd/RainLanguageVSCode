{
    "name": "rain-language",
    "displayName": "RainLanguage",
    "description": "Provides language services and debugging functions for RainLanguage",
    "version": "1.0.0",
    "publisher": "rain-cmd",
    "engines": {
        "vscode": "^1.28.0"
    },
    "license": "MIT",
    "icon": "images/rain.png",
    "categories": [
        "Programming Languages",
        "Formatters",
        "Debuggers"
    ],
    "keywords": [
        "RainLanguage",
        "debugg",
        "languageserver"  
    ],
    "activationEvents": [
        "onDebug"
    ],
    "homepage": "https://github.com/RainCmd/RainLanguageVSCode",
    "repository": {
        "type": "git",
        "url": "https://github.com/RainCmd/RainLanguageVSCode.git"
    },
    "bugs": {
        "url": "https://github.com/RainCmd/RainLanguageVSCode/issues"
    },
    "main": "./out/extension.js",
    "scripts": {
        "dependencies": "npm install",
        "build": "tsc -b",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^17.0.21",
        "@types/vscode": "^1.28.0",
        "typescript": "^4.8.4",
        "vsce": "^2.15.0"
    },
    "dependencies": {
        "iconv-lite": "^0.6.3",
        "@vscode/debugadapter": "^1.61.0",
        "vscode-languageclient": "^9.0.1"
    },
    "contributes": {
        "languages": [
            {
                "id": "RainLanguage",
                "extensions": [
                    ".rain"
                ],
                "aliases": [
                    "RainLanguage"
                ],
                "icon": {
                    "dark": "./images/rain-dark.png",
                    "light": "./images/rain-light.png"
                },
                "configuration": "./language-configuration.json"
            }
        ],
        "menus": {
            "editor/title/run": [
                {
                    "command": "cmd.rain.kernel-document",
                    "when": "resourceLangId == RainLanguage"
                },
                {
                    "command": "cmd.rain.restart-language-server",
                    "when": "resourceLangId == RainLanguage && extensionDebug"
                }
            ]
        },
        "commands": [
            {
                "command": "cmd.rain.kernel-document",
                "title": "核心库定义",
                "icon": "$(remote-explorer-documentation)"
            },
            {
                "command": "cmd.rain.restart-language-server",
                "title": "重启语言服务",
                "icon": "$(debug-restart)"
            }
        ],
        "snippets": [
            {
                "language": "RainLanguage",
                "path": "./snippets.json"
            }
        ],
        "breakpoints": [
            {
                "language": "RainLanguage"
            }
        ],
        "debuggers": [
            {
                "configurationSnippets": [
                    {
                        "label": "RainLanguage: 调试运行",
                        "description": "一个可以调试运行RainLanguage的启动配置",
                        "body": {
                            "name": "RainLanguage调试运行",
                            "request": "launch",
                            "type": "RainLanguage调试运行",
                            "EntryPoint": "Main",
                            "ErrorLevel": 4,
                            "Fixed": false,
                            "ProjectName": "RainTest",
                            "Timestep": 100
                        }
                    }
                ],
                "type": "RainLanguage调试运行",
                "label": "直接运行并调试",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "ProjectName",
                            "EntryPoint",
                            "Timestep",
                            "ErrorLevel",
                            "Fixed"
                        ],
                        "properties": {
                            "ProjectName": {
                                "type": "string",
                                "description": "程序集名",
                                "default": "RainTest"
                            },
                            "EntryPoint": {
                                "type": "string",
                                "description": "入口函数",
                                "default": "Main"
                            },
                            "Timestep": {
                                "type": "number",
                                "description": "一帧的时长(毫秒)",
                                "default": 100
                            },
                            "ErrorLevel": {
                                "type": "number",
                                "description": "警告日志输出等级，最高8级",
                                "default": 4
                            },
                            "Fixed": {
                                "type": "boolean",
                                "description": "使用定点数计算",
                                "default": false
                            }
                        }
                    }
                }
            },
            {
                "configurationSnippets": [
                    {
                        "label": "RainLanguage: 附加到进程",
                        "description": "对运行在其他进程的虚拟机进行调试的配置",
                        "body": {
                            "name": "RainLanguage附加到进程",
                            "request": "attach",
                            "type": "RainLanguage附加到进程",
                            "ProjectName": "RainTest",
                            "Fixed": false
                        }
                    }
                ],
                "type": "RainLanguage附加到进程",
                "label": "附加到其他进程，对进程中运行的RainLanguage进行调试",
                "configurationAttributes": {
                    "attach": {
                        "required": [
                            "ProjectName",
                            "Fixed"
                        ],
                        "properties": {
                            "ProjectName": {
                                "type": "string",
                                "description": "程序集名",
                                "default": "RainTest"
                            },
                            "Fixed": {
                                "type": "boolean",
                                "description": "使用定点数计算",
                                "default": false
                            }
                        }
                    }
                }
            }
        ],
        "grammars": [
            {
                "language": "RainLanguage",
                "scopeName": "source.rain-language",
                "path": "./rain.tmLanguage.json"
            }
        ],
        "views": {
            "debug": [
                {
                    "id": "RainKernelState",
                    "name": "虚拟机状态视图",
                    "type": "webview",
                    "when": "resourceLangId == RainLanguage && inDebugMode"
                }
            ]
        }
    }
}